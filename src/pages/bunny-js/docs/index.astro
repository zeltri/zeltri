---
import BunnyLayout from "../../../layouts/BunnyLayout.astro";
import BunnyNavbar from "../../../components/bunny/BunnyNavbar.astro";
import BunnyFooter from "../../../components/bunny/BunnyFooter.astro";

const importWarning = `<span class="keyword">import</span> { BunnyJS } <span class="keyword">from</span> <span class="string">"@crobf/bunny-js/src/bunny"</span>;`;

const quickStartCode = `<span class="keyword">import</span> { BunnyJS } <span class="keyword">from</span> <span class="string">"@crobf/bunny-js/src/bunny"</span>;

<span class="comment">// Create an element</span>
<span class="keyword">const</span> div = BunnyJS.<span class="function">div</span>({ <span class="property">class</span>: <span class="string">"my-class"</span> });
div.<span class="function">text</span>(<span class="string">"Hello World!"</span>).<span class="function">bg</span>(<span class="string">"lightblue"</span>).<span class="function">insertIn</span>(document.body);

<span class="comment">// Select existing elements</span>
<span class="keyword">const</span> button = BunnyJS.<span class="function">select</span>(<span class="string">"#my-button"</span>);
button.<span class="function">on</span>(<span class="string">"click"</span>, () =&gt; <span class="function">alert</span>(<span class="string">"Click!"</span>));`;

const proxyCode = `<span class="keyword">import</span> { BunnyJS } <span class="keyword">from</span> <span class="string">"@crobf/bunny-js/src/bunny"</span>;

<span class="comment">// When you call BunnyJS.div(), the proxy:</span>
<span class="comment">// 1. Intercepts the 'div' property</span>
<span class="comment">// 2. Verifies it's a valid HTML tag</span>
<span class="comment">// 3. Creates a &lt;div&gt; element using document.createElement()</span>
<span class="comment">// 4. Applies the provided attributes</span>
<span class="comment">// 5. Enhances the element with additional methods</span>
<span class="comment">// 6. Returns the enhanced element</span>

<span class="keyword">const</span> div = BunnyJS.<span class="function">div</span>({ <span class="property">class</span>: <span class="string">"container"</span>, <span class="property">id</span>: <span class="string">"main"</span> });`;

const selectCode = `<span class="comment">// BunnyJS.select(selector: string)</span>
<span class="comment">// Selects an element from the DOM and enhances it</span>

<span class="keyword">const</span> header = BunnyJS.<span class="function">select</span>(<span class="string">".header"</span>);

<span class="keyword">if</span> (header) {
  header.<span class="function">text</span>(<span class="string">"New title"</span>).<span class="function">bg</span>(<span class="string">"#f0f0f0"</span>);
}

<span class="comment">// BunnyJS.selectAll(selector: string)</span>
<span class="comment">// Selects multiple elements and enhances them</span>

<span class="keyword">const</span> items = BunnyJS.<span class="function">selectAll</span>(<span class="string">".item"</span>);

items.<span class="function">forEach</span>((item) =&gt; {
  item.<span class="function">toggle</span>(<span class="string">"active"</span>);
});`;

const actionsCode = `<span class="comment">// show(mode?: string): void</span>
<span class="keyword">const</span> modal = BunnyJS.<span class="function">div</span>({ <span class="property">class</span>: <span class="string">"modal"</span> });
modal.<span class="function">show</span>();        <span class="comment">// display: ""</span>
modal.<span class="function">show</span>(<span class="string">"flex"</span>);  <span class="comment">// display: "flex"</span>

<span class="comment">// hide(): void</span>
modal.<span class="function">hide</span>();        <span class="comment">// display: "none"</span>

<span class="comment">// toggle(className: string | string[]): void</span>
modal.<span class="function">toggle</span>(<span class="string">"active"</span>);              <span class="comment">// One class</span>
modal.<span class="function">toggle</span>([<span class="string">"active"</span>, <span class="string">"visible"</span>]); <span class="comment">// Multiple</span>

<span class="comment">// insertIn(query: string | HTMLElement): void</span>
modal.<span class="function">insertIn</span>(document.body);   <span class="comment">// Direct element</span>
modal.<span class="function">insertIn</span>(<span class="string">".container"</span>);    <span class="comment">// CSS selector</span>`;

const helpersCode = `<span class="comment">// on(event, handler): BunnyExtendedElement</span>
<span class="keyword">const</span> btn = BunnyJS.<span class="function">button</span>({ <span class="property">class</span>: <span class="string">"btn"</span> });
btn.<span class="function">on</span>(<span class="string">"click"</span>, (e) =&gt; console.<span class="function">log</span>(<span class="string">"Click!"</span>));

<span class="comment">// text(value: string): BunnyExtendedElement</span>
btn.<span class="function">text</span>(<span class="string">"Click here"</span>);

<span class="comment">// item(value, attrs): BunnyExtendedElement (for ul/ol)</span>
<span class="keyword">const</span> ul = BunnyJS.<span class="function">ul</span>();
ul.<span class="function">item</span>(<span class="string">"Item 1"</span>, { <span class="property">class</span>: <span class="string">"list-item"</span> });
ul.<span class="function">item</span>(<span class="string">"Item 2"</span>, { <span class="property">class</span>: <span class="string">"list-item"</span> });

<span class="comment">// attr(key, value?): Gets or sets attribute</span>
<span class="keyword">const</span> img = BunnyJS.<span class="function">img</span>();
img.<span class="function">attr</span>(<span class="string">"src"</span>, <span class="string">"image.jpg"</span>);  <span class="comment">// Sets</span>
<span class="keyword">const</span> src = img.<span class="function">attr</span>(<span class="string">"src"</span>);     <span class="comment">// Gets</span>`;

const stylesCode = `<span class="comment">// bg(color: string): BunnyExtendedElement</span>
<span class="keyword">const</span> card = BunnyJS.<span class="function">div</span>();
card.<span class="function">bg</span>(<span class="string">"#ffffff"</span>);
card.<span class="function">bg</span>(<span class="string">"rgb(255, 255, 255)"</span>);

<span class="comment">// color(color: string): BunnyExtendedElement</span>
card.<span class="function">color</span>(<span class="string">"#333333"</span>);

<span class="comment">// font(font: string): BunnyExtendedElement</span>
card.<span class="function">font</span>(<span class="string">"16px Arial, sans-serif"</span>);

<span class="comment">// spacing(margin?, padding?): BunnyExtendedElement</span>
card.<span class="function">spacing</span>(<span class="string">"20px"</span>);                  <span class="comment">// Only margin</span>
card.<span class="function">spacing</span>(<span class="string">"10px"</span>, <span class="string">"20px"</span>);          <span class="comment">// Margin + padding</span>
card.<span class="function">spacing</span>([<span class="string">"10px"</span>, <span class="string">"20px"</span>]);        <span class="comment">// [vertical, horizontal]</span>`;

const chainingCode = `<span class="keyword">const</span> card = BunnyJS.<span class="function">div</span>({ <span class="property">class</span>: <span class="string">"card"</span> })
  .<span class="function">text</span>(<span class="string">"Card title"</span>)
  .<span class="function">bg</span>(<span class="string">"#ffffff"</span>)
  .<span class="function">color</span>(<span class="string">"#333333"</span>)
  .<span class="function">font</span>(<span class="string">"16px Arial"</span>)
  .<span class="function">spacing</span>(<span class="string">"20px"</span>, <span class="string">"15px"</span>)
  .<span class="function">on</span>(<span class="string">"click"</span>, () =&gt; console.<span class="function">log</span>(<span class="string">"Click!"</span>))
  .<span class="function">on</span>(<span class="string">"mouseenter"</span>, (e) =&gt; e.target.style.opacity = <span class="string">"0.8"</span>)
  .<span class="function">on</span>(<span class="string">"mouseleave"</span>, (e) =&gt; e.target.style.opacity = <span class="string">"1"</span>)
  .<span class="function">insertIn</span>(document.body);`;

const todoExample = `<span class="keyword">const</span> todoList = BunnyJS.<span class="function">ul</span>({ <span class="property">class</span>: <span class="string">"todo-list"</span> });

<span class="keyword">const</span> tasks = [<span class="string">"Buy milk"</span>, <span class="string">"Call doctor"</span>, <span class="string">"Exercise"</span>];

tasks.<span class="function">forEach</span>((task) =&gt; {
  <span class="keyword">const</span> li = BunnyJS.<span class="function">li</span>().<span class="function">text</span>(task);
  li.<span class="function">on</span>(<span class="string">"click"</span>, () =&gt; li.<span class="function">toggle</span>(<span class="string">"completed"</span>));
  li.<span class="function">insertIn</span>(todoList);
});

todoList.<span class="function">insertIn</span>(document.body);`;

const formExample = `<span class="keyword">const</span> form = BunnyJS.<span class="function">form</span>({ <span class="property">class</span>: <span class="string">"contact-form"</span> });

<span class="keyword">const</span> nameInput = BunnyJS.<span class="function">input</span>({
  <span class="property">type</span>: <span class="string">"text"</span>,
  <span class="property">placeholder</span>: <span class="string">"Your name"</span>,
  <span class="property">required</span>: <span class="keyword">true</span>,
});

<span class="keyword">const</span> submitBtn = BunnyJS.<span class="function">button</span>({ <span class="property">type</span>: <span class="string">"submit"</span> });
submitBtn.<span class="function">text</span>(<span class="string">"Send"</span>);

form.<span class="function">on</span>(<span class="string">"submit"</span>, (e) =&gt; {
  e.<span class="function">preventDefault</span>();
  <span class="function">alert</span>(<span class="string">"Form submitted!"</span>);
});

form.<span class="function">appendChild</span>(nameInput);
form.<span class="function">appendChild</span>(submitBtn);
form.<span class="function">insertIn</span>(document.body);`;

const sections = [
  { id: "installation", title: "Installation" },
  { id: "quick-start", title: "Quick Start" },
  { id: "api-reference", title: "API Reference" },
  { id: "proxy", title: "The Main Proxy" },
  { id: "selection", title: "Selection Methods" },
  { id: "actions", title: "Action Methods" },
  { id: "helpers", title: "Helper Methods" },
  { id: "styles", title: "Style Methods" },
  { id: "chaining", title: "Method Chaining" },
  { id: "examples", title: "Advanced Examples" },
];
