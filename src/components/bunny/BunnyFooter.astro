---
// BunnyFooter.astro - Footer with links and info

const currentYear = new Date().getFullYear();

const footerLinks = {
  product: [
    { name: "Features", href: "#features" },
    { name: "Examples", href: "#code" },
    { name: "Documentation", href: "/bunny-js/docs" },
    {
      name: "Changelog",
      href: "https://github.com/CROBF-tech/bunny-js/releases",
    },
  ],
  resources: [
    { name: "GitHub", href: "https://github.com/CROBF-tech/bunny-js" },
    { name: "npm", href: "https://www.npmjs.com/package/@crobf/bunny-js" },
    { name: "Issues", href: "https://github.com/CROBF-tech/bunny-js/issues" },
    {
      name: "Discussions",
      href: "https://github.com/CROBF-tech/bunny-js/discussions",
    },
  ],
  crobf: [
    { name: "CROBF", href: "https://crobf.tech" },
    { name: "Zeltri", href: "/" },
    { name: "All Projects", href: "/#projects" },
  ],
};
---

<footer class="bunny-footer">
  <div class="bunny-container px-4 md:px-8">
    <div class="grid md:grid-cols-4 gap-8 mb-8">
      <!-- Brand Column -->
      <div class="md:col-span-1">
        <a
          href="/bunny-js"
          class="flex items-center gap-2 text-xl font-bold text-bunny-text-light mb-4"
        >
          <span class="text-2xl">üê∞</span>
          <span>Bunny-JS</span>
        </a>
        <p class="text-sm text-bunny-text-muted leading-relaxed">
          A lightweight library for simplified DOM manipulation. Part of the
          Zeltri open source ecosystem by CROBF.
        </p>
      </div>

      <!-- Product Links -->
      <div>
        <h4
          class="text-sm font-semibold text-bunny-text-light mb-4 uppercase tracking-wider"
        >
          Product
        </h4>
        <ul class="space-y-3">
          {
            footerLinks.product.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-bunny-text-muted hover:text-bunny-primary transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Resources Links -->
      <div>
        <h4
          class="text-sm font-semibold text-bunny-text-light mb-4 uppercase tracking-wider"
        >
          Resources
        </h4>
        <ul class="space-y-3">
          {
            footerLinks.resources.map((link) => (
              <li>
                <a
                  href={link.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-sm text-bunny-text-muted hover:text-bunny-primary transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- CROBF Links -->
      <div>
        <h4
          class="text-sm font-semibold text-bunny-text-light mb-4 uppercase tracking-wider"
        >
          CROBF
        </h4>
        <ul class="space-y-3">
          {
            footerLinks.crobf.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-bunny-text-muted hover:text-bunny-primary transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="pt-8 border-t flex flex-col md:flex-row justify-between items-center gap-4"
      style="border-color: var(--color-bunny-border);"
    >
      <p class="text-sm text-bunny-text-muted">
        ¬© {currentYear} CROBF. Released under the MIT License.
      </p>

      <div class="flex items-center gap-4">
        <!-- GitHub -->
        <a
          href="https://github.com/CROBF-tech/bunny-js"
          target="_blank"
          rel="noopener noreferrer"
          class="text-bunny-text-muted hover:text-bunny-text-light transition-colors"
          aria-label="GitHub"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            ></path>
          </svg>
        </a>

        <!-- npm -->
        <a
          href="https://www.npmjs.com/package/@crobf/bunny-js"
          target="_blank"
          rel="noopener noreferrer"
          class="text-bunny-text-muted hover:text-bunny-text-light transition-colors"
          aria-label="npm"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M0 7.334v8h6.666v1.332H12v-1.332h12v-8H0zm6.666 6.664H5.334v-4H3.999v4H1.335V8.667h5.331v5.331zm4 0v1.336H8.001V8.667h5.334v5.332h-2.669v-.001zm12.001 0h-1.33v-4h-1.336v4h-1.335v-4h-1.33v4h-2.671V8.667h8.002v5.331z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .grid {
    display: grid;
  }

  @media (min-width: 768px) {
    .md\:grid-cols-4 {
      grid-template-columns: repeat(4, minmax(0, 1fr));
    }

    .md\:col-span-1 {
      grid-column: span 1 / span 1;
    }
  }

  .space-y-3 > * + * {
    margin-top: 0.75rem;
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
</style>
