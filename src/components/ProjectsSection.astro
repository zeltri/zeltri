---
// ProjectsSection.astro - Sección de listado de proyectos
import ProjectsList from "./ProjectsList";
---

<section class="w-full px-4 py-24 flex items-center justify-center">
  <div class="max-w-6xl w-full">
    <h2
      class="text-4xl md:text-5xl font-bold mb-4 text-text-primary text-center"
    >
      Proyectos
    </h2>
    <p class="text-text-secondary text-center mb-12 text-lg">
      Herramientas construidas con propósito
    </p>

    <ProjectsList client:load initialCount={3} incrementCount={6} />
  </div>
</section>
