// ChronoFooter.astro - Footer with links and info

const currentYear = new Date().getFullYear();

const footerLinks = {
  product: [
    { name: "Features", href: "#features" },
    { name: "Smart Rendering", href: "#smart-rendering" },
    { name: "Instalaci贸n", href: "#installation" },
    { name: "Configuraci贸n", href: "#configuration" },
  ],
  docs: [
    { name: "Documentaci贸n", href: "/chrono-terminal/docs" },
    { name: "Smart Rendering", href: "/chrono-terminal/docs/smart-rendering" },
    { name: "Sugerencias", href: "/chrono-terminal/docs/suggestions" },
    { name: "API", href: "/chrono-terminal/docs/api" },
  ],
  resources: [
    { name: "GitHub", href: "https://github.com/zeltri/CHRONO" },
    { name: "Issues", href: "https://github.com/zeltri/CHRONO/issues" },
    { name: "Releases", href: "https://github.com/zeltri/CHRONO/releases" },
  ],
  crobf: [
    { name: "CROBF", href: "https://crobf.tech" },
    { name: "Zeltri", href: "/" },
    { name: "Todos los proyectos", href: "/#projects" },
  ],
};
---

<footer class="chrono-footer">
  <div class="chrono-container">
    <div class="grid md:grid-cols-5 gap-8 mb-8">
      <!-- Brand Column -->
      <div class="md:col-span-1">
        <a
          href="/chrono-terminal"
          class="flex items-center gap-2 text-xl font-bold text-chrono-text-light mb-4"
        >
          <span class="text-2xl"></span>
          <span>CHRONO</span>
        </a>
        <p class="text-sm text-chrono-text-muted leading-relaxed mb-4">
          Un emulador de terminal moderno, r谩pido y elegante escrito en Rust.
          Parte del ecosistema open source Zeltri de CROBF.
        </p>
        <div class="flex gap-3">
          <a
            href="https://github.com/zeltri/CHRONO"
            target="_blank"
            rel="noopener noreferrer"
            class="text-chrono-text-muted hover:text-chrono-primary transition-colors"
            aria-label="GitHub"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Product Links -->
      <div>
        <h4
          class="text-sm font-semibold text-chrono-text-light mb-4 uppercase tracking-wider"
        >
          Producto
        </h4>
        <ul class="space-y-3">
          {
            footerLinks.product.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-chrono-text-muted hover:text-chrono-primary transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Docs Links -->
      <div>
        <h4
          class="text-sm font-semibold text-chrono-text-light mb-4 uppercase tracking-wider"
        >
          Documentaci贸n
        </h4>
        <ul class="space-y-3">
          {
            footerLinks.docs.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-chrono-text-muted hover:text-chrono-primary transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Resources Links -->
      <div>
        <h4
          class="text-sm font-semibold text-chrono-text-light mb-4 uppercase tracking-wider"
        >
          Recursos
        </h4>
        <ul class="space-y-3">
          {
            footerLinks.resources.map((link) => (
              <li>
                <a
                  href={link.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-sm text-chrono-text-muted hover:text-chrono-primary transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- CROBF Links -->
      <div>
        <h4
          class="text-sm font-semibold text-chrono-text-light mb-4 uppercase tracking-wider"
        >
          CROBF
        </h4>
        <ul class="space-y-3">
          {
            footerLinks.crobf.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-chrono-text-muted hover:text-chrono-primary transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="pt-8 mt-8 border-t border-chrono-border flex flex-col md:flex-row justify-between items-center gap-4"
    >
      <p class="text-sm text-chrono-text-muted">
        漏 {currentYear} CHRONO Terminal. MIT License. Made with  Rust.
      </p>
      <div class="flex items-center gap-4 text-sm text-chrono-text-muted">
        <span class="flex items-center gap-2">
          <span class="w-2 h-2 rounded-full bg-chrono-green"></span>
          Proyecto activo
        </span>
      </div>
    </div>
  </div>
</footer>
