---
// ChronoNavbar.astro - Navigation bar for CHRONO Terminal
---

<nav class="chrono-navbar">
  <div class="chrono-container flex items-center justify-between">
    <!-- Logo -->
    <a
      href="/chrono-terminal"
      class="flex items-center gap-3 text-xl font-bold hover:opacity-80 transition-opacity"
    >
      <span class="text-2xl">ðŸš€</span>
      <span class="text-chrono-text-light">CHRONO</span>
      <span class="chrono-badge chrono-badge-cyan">Terminal</span>
    </a>

    <!-- Navigation Links (Desktop) -->
    <div class="hidden md:flex items-center gap-8">
      <a
        href="#features"
        class="text-sm text-chrono-text-muted hover:text-chrono-text-light transition-colors"
      >
        Features
      </a>
      <a
        href="#smart-rendering"
        class="text-sm text-chrono-text-muted hover:text-chrono-text-light transition-colors"
      >
        Smart Rendering
      </a>
      <a
        href="/chrono-terminal/docs"
        class="text-sm text-chrono-text-muted hover:text-chrono-text-light transition-colors"
      >
        Docs
      </a>
      <a
        href="https://github.com/zeltri/CHRONO"
        target="_blank"
        rel="noopener noreferrer"
        class="text-sm text-chrono-text-muted hover:text-chrono-text-light transition-colors flex items-center gap-1"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
        GitHub
      </a>
    </div>

    <!-- CTA Button -->
    <a
      href="#installation"
      class="hidden sm:flex chrono-btn chrono-btn-primary text-sm"
    >
      <svg
        class="w-4 h-4"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
        ></path>
      </svg>
      Install
    </a>

    <!-- Mobile Menu Button -->
    <button
      id="chrono-mobile-menu-btn"
      class="md:hidden p-2 text-chrono-text-light"
      aria-label="Toggle menu"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div
    id="chrono-mobile-menu"
    class="hidden md:hidden mt-4 pb-4 border-t border-chrono-border pt-4"
  >
    <div class="flex flex-col gap-4 chrono-container">
      <a
        href="#features"
        class="text-sm text-chrono-text-muted hover:text-chrono-text-light transition-colors"
      >
        Features
      </a>
      <a
        href="#smart-rendering"
        class="text-sm text-chrono-text-muted hover:text-chrono-text-light transition-colors"
      >
        Smart Rendering
      </a>
      <a
        href="/chrono-terminal/docs"
        class="text-sm text-chrono-text-muted hover:text-chrono-text-light transition-colors"
      >
        Docs
      </a>
      <a
        href="https://github.com/zeltri/CHRONO"
        target="_blank"
        rel="noopener noreferrer"
        class="text-sm text-chrono-text-muted hover:text-chrono-text-light transition-colors"
      >
        GitHub
      </a>
      <a
        href="#installation"
        class="chrono-btn chrono-btn-primary text-sm w-fit"
      >
        Install
      </a>
    </div>
  </div>
</nav>

<script>
  const mobileMenuBtn = document.getElementById("chrono-mobile-menu-btn");
  const mobileMenu = document.getElementById("chrono-mobile-menu");

  mobileMenuBtn?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
  });
</script>
