---
interface Props {
  title: string;
  description?: string;
  showTOC?: boolean;
}

const { title, description, showTOC = true } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - Bunny-JS Documentation</title>
    <style is:global>
      :root {
        /* Colores - Amarillo y Negro */
        --color-primary-50: #fffbeb;
        --color-primary-100: #fef3c7;
        --color-primary-200: #fde68a;
        --color-primary-300: #fcd34d;
        --color-primary-400: #fbbf24;
        --color-primary-500: #f59e0b; /* Amarillo base */
        --color-primary-600: #d97706;
        --color-primary-700: #b45309;
        --color-primary-800: #92400e;
        --color-primary-900: #78350f;

        /* Superficies - Negro */
        --color-surface-base: #0f0f0f;
        --color-surface-elevated: #1a1a1a;
        --color-surface-sunken: #000000;
        --color-surface-overlay: #262626;
        --color-surface-subtle: #151515;

        /* Texto */
        --color-text-primary: #fafafa;
        --color-text-secondary: #a3a3a3;
        --color-text-tertiary: #737373;
        --color-text-accent: var(--color-primary-400);

        /* Bordes */
        --color-border-subtle: #262626;
        --color-border-default: #404040;
        --color-border-strong: #525252;
        --color-border-accent: var(--color-primary-600);

        /* Semánticos */
        --color-success: #22c55e;
        --color-warning: #eab308;
        --color-error: #ef4444;
        --color-info: #3b82f6;

        /* Tipografía */
        --font-sans: "Segoe UI", Roboto, system-ui, -apple-system, sans-serif;
        --font-mono: "Monaco", "Menlo", "Ubuntu Mono", monospace;

        /* Espaciado */
        --space-xs: 0.25rem;
        --space-sm: 0.5rem;
        --space-md: 1rem;
        --space-lg: 1.5rem;
        --space-xl: 2rem;
        --space-2xl: 3rem;

        /* Radio */
        --radius-sm: 0.375rem;
        --radius-md: 0.5rem;
        --radius-lg: 0.75rem;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html,
      body {
        height: 100%;
      }

      body {
        background-color: var(--color-surface-base);
        color: var(--color-text-primary);
        font-family: var(--font-sans);
        line-height: 1.6;
        font-size: 16px;
      }

      a {
        color: var(--color-text-accent);
        text-decoration: none;
        transition: color 0.2s ease;
      }

      a:hover {
        color: var(--color-primary-300);
      }

      code {
        background-color: var(--color-surface-elevated);
        color: var(--color-primary-300);
        font-family: var(--font-mono);
        padding: 0.2rem 0.4rem;
        border-radius: var(--radius-sm);
        font-size: 0.9em;
      }

      pre {
        background-color: var(--color-surface-sunken);
        border: 1px solid var(--color-border-default);
        border-radius: var(--radius-md);
        padding: var(--space-lg);
        overflow-x: auto;
        margin: var(--space-md) 0;
      }

      pre code {
        background-color: transparent;
        color: var(--color-primary-300);
        padding: 0;
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        color: var(--color-text-primary);
        margin-top: var(--space-2xl);
        margin-bottom: var(--space-md);
        font-weight: 600;
      }

      h1 {
        font-size: 2.5rem;
        margin-top: 0;
      }

      h2 {
        font-size: 2rem;
        color: var(--color-primary-400);
        padding-bottom: var(--space-md);
        border-bottom: 2px solid var(--color-border-default);
      }

      h3 {
        font-size: 1.5rem;
        color: var(--color-primary-300);
      }

      h4 {
        font-size: 1.25rem;
      }

      p {
        margin-bottom: var(--space-md);
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin: var(--space-lg) 0;
        border: 1px solid var(--color-border-default);
        border-radius: var(--radius-md);
        overflow: hidden;
      }

      th {
        background-color: var(--color-surface-elevated);
        color: var(--color-primary-400);
        padding: var(--space-md);
        text-align: left;
        font-weight: 600;
        border-bottom: 2px solid var(--color-border-accent);
      }

      td {
        padding: var(--space-md);
        border-bottom: 1px solid var(--color-border-subtle);
      }

      tr:hover {
        background-color: var(--color-surface-elevated);
      }

      ul,
      ol {
        margin-left: var(--space-lg);
        margin-bottom: var(--space-md);
      }

      li {
        margin-bottom: var(--space-sm);
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
